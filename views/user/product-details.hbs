    <script src="/stylesheets/assets/js/main.js"></script>
</body>
<script>
    function addToCart(productId) {
        $.ajax({
            url: '/add-to-cat/' + productId,
            method: 'get',
            success: (response) => {
                if (response.status) {
                    let count = $('#cartCount').html()
                    $('#cartCount').html(response.cartCount)
                }
            }
        })
    }
</script>

<script>
    function addToWishlist(productId) {
        $.ajax({
            url: '/add-to-wishList/' + productId,
            method: 'get',
            success: (response) => {
                if (response.status) {
                    changeStyle()
                }else{
                    alert("exits")
                }
            }
        })
    }
</script>

<script>
 
    function changeStyle(){
            if ($(".buttonws").hasClass("deactivate")) {
                $(".buttonws").removeClass("deactivate")
            }
            if ($(".buttonws").hasClass("active")) {
                $(".buttonws").addClass("deactivate")
            }
            $(".buttonws").toggleClass("animate");
            $(".buttonws").toggleClass("active");
            $(".buttonws").toggleClass("inactive");
    }
</script>


