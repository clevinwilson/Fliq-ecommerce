<body>
    {{>user-header}}
    <div class="page-wrapper">


        <main class="main mt-md-5">

            <div class="page-content">
                <div class="container">
                    <div class="product-details-top">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="product-gallery product-gallery-vertical position-relative">
