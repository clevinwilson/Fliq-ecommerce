                                            <i class="fa-solid fa-indian-rupee-sign me-2"></i> {{product.price}}
                                        </div><!-- End .product-price -->

                                        <div class="product-content">
                                            <p class="text-dark">Super Savings (2 OFFERS)
                                            </p>
                                        </div><!-- End .product-content -->
                                        <p class="my-4 text-dark">Memory: {{product.storage}} GB</p>
                                        <div class="details-filter-row details-row-size">
                                            <label>Color:</label>

                                            <div class="product-nav product-nav-thumbs">
                                                <p class="text-dark">{{product.color}}</p>
                                            </div><!-- End .product-nav -->
                                        </div><!-- End .details-filter-row -->
