                                {{/each}}
                                </ul>

                                <p>{{product.overview}}</p>
                            </div><!-- End .product-desc-content -->
                        </div><!-- .End .tab-pane -->
                        <div style="border: 2px solid #d5d5d5;border-radius: 10px;" class="tab-pane fade show mt-3"
                            id="product-info-tab" role="tabpanel" aria-labelledby="product-info-link">
