                        </a>
                    </figure><!-- End .product-media -->
                    <h4 class="product-title"><a href="">{{product.name}} ({{product.color}})</a></h4>
                    <!-- End .product-title -->
                </div><!-- End .col-6 -->

                <div class="col-6 justify-content-end">
                    <div class="product-price text-dark">
                        <i class="fa-solid fa-indian-rupee-sign me-2"></i> {{product.price}}
                    </div><!-- End .product-price -->


                    <div class="product-details-action">
                        {{#if product.status}}
                        <a onclick="addToCart('{{product._id}}')" class="btn-product btn-cart"><span>add to
                                cart</span></a>
                        <a style="font-size: 24px;" href="#" class="wishlist btn-product btn-wishlist text-dark"
