{{>user-header}}

<main>
    <!-- carosusel -->
    <section>
        <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                
                <div class="carousel-item active" data-bs-interval="4000">
                    <div class="carousel-cards row">
                        <div class="col-md-6 d-flex justify-content-center align-items-center ">
                            <div class="carousel-left-section ms-3">
                                <h1 class="carousel-title">Enjoy life at</h1>
                                <h1 class="carousel-title-tail mt-md-3">lightning speeds</h1>
                                <span class="carouse-product-info d-block mt-3">Moto Edge + - The most immersive
                                    display</span>
                                <button class="mt-3 mt-md-4">Discover <i class="ms-2 bi bi-arrow-right"></i></button>
                            </div>
                        </div>
                        <div class="col-md-6 m-auto">
                            <img class="carousel-image" src="/images/banner/moto.png" alt="">
                        </div>
                    </div>
                </div>
                {{#each banner}}
                <div class="carousel-item" data-bs-interval="4000">
                    <div class="carousel-cards row " style="background-color:{{this.color}}">
                        <div class="col-md-6 d-flex justify-content-center align-items-center ">
                            <div class="carousel-left-section ms-3">
                                <h1 class="carousel-title">{{this.title}}</h1>
                                <h1 class="carousel-title-tail mt-3">{{this.subtitle}}</h1>
                                <span class="carouse-product-info d-block mt-3">{{this.text}}</span>
                                <button class="mt-4">Discover <i class="ms-2 bi bi-arrow-right"></i></button>
                            </div>
                        </div>
                        <div class="col-md-6 m-auto">
                            <img class="carousel-image" src="/images/banner/{{this.image.filename}}" alt="">
                        </div>
                    </div>
                </div>
                {{/each}}
                
            </div>
            <button class="carousel-control-prev carousel-control" type="button"
                data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                <i class="text-dark bi bi-arrow-left"></i>
            </button>
            <button class="carousel-control-next carousel-control" type="button"
                data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                <i class="text-dark bi bi-arrow-right"></i>
            </button>
        </div>
    </section>

    <!-- category bar -->
    <section>
        <div class="category-row">
            <div class="category-left bg-white">
                <div class="category-title">
                    <h2 class="text-center">Best of</h2>
                </div>
                <div class="category-image">
                    <img class="w-100 category-banner" src="./images//Best-of-Electronics.png" alt="">
                </div>
            </div>
            <div class="category-right d-flex align-items-center justify-content-around">
                {{#each categoryList}}
                <a href="/product-listing/{{this._id}}?page=1&limit=10">
                    <div class="category d-flex justify-content-center p-2">
                        <img class="category-icon-image" src="/images/category-images/{{this.image.filename}}" alt="">
                    </div>
                </a>
                {{/each}}
            </div>
        </div>
    </section>

    <!-- product listing -->
    <section>
        <div class="container-fluid   mt-5">
            <h2 class="section-tilte">Products</h2>
            <div class="row mt-3 product-listing">
                {{#each products}}
                <div class="col-md-3 col-lg-2 col-6  mt-4 d-flex justify-content-center align-items-center">
                    <a class="text-decoration-none text-dark" href="/product-details/{{this._id}}">
                        <div style="height: 266px;" class="d-flex flex-column justify-content-around  product-box-wrap">
                            <div class="proudct-image-wrap mt-4 d-flex justify-content-center align-items-center">
                                <img class="product-image" src="/images/product-images/{{this.images.[0].filename}}" alt="">
                            </div>
                            <p class="product-name mt-1">{{this.name}}</p>
                            <span class="product-price">₹ {{this.price}}</span>
                            <i class="bi bi-heart"></i>
                        </div>
                    </a>
                </div>
                {{/each}}
                

            </div>
        </div>
    </section>

    <!-- ad section -->
    <section>
        <div class="container-fluid mt-5 advertisement-banner-wrap">
            <img class="w-100 " src="/images/Best-of-Electronics s.png" alt="">
        </div>
    </section>

    <!-- highlight section -->
    <section>
        <div class="container-fluid mt-5">
            <h2 class="section-tilte ms-3">Highlights</h2>
            <div class="row p-3">
                {{#each hightlight}}
                <div class="col-md-6 col-lg-4 col-sm-6 p-2 ">
                    <div class="highlight-box  justify-content-center align-items-center position-relative">
                        <div class="hilight-info p-2">
                            <h3>{{this.product.[0].name}}</h3>
                            <h3>{{this.product.[0].Type}}</h3>
                            <span>{{this.product.[0].feature.[0]}}</span>
                            <h3 class="mt-2">Start at ₹ {{this.product.[0].price}}</h3>
                        </div>
                        <div class="highlight-image-wrap">
                            <img style="height: 200px; object-fit: contain;" class="w-100" src="/images/product-images/{{this.product.[0].images.[0].filename}}" alt="">
                        </div>

                        <div class="product-status">
                            <span>New</span>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>
</main>


<style>
 @media screen and (max-width:768px) {
       body{
        margin-top: 0;
    }
 }
</style>

{{>user-footer}}