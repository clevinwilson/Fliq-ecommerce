<section>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center  h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5 p-4">
                <div class="card shadow-2-strong mt-5 border-0" style="border-radius: 1rem; background-color: #F2F2F2;">
                    <div class="card-body p-5 text-center">

                        <form action="/otp-verification" method="post">
                            <h3 class="mb-4">Enter OTP</h3>
                            {{#if otpError}}
                            <div class="alert alert-danger  p-2" role="alert" style="font-size: 14px;">
                                {{otpError}}
                            </div>
                            {{/if}}
                            <div class="form-outline mt- mb-4">
                                <input type="text" placeholder="Enter OTP" name="otp"
                                    class="mt-1 form-control form-control-lg" required />
                            </div>

                            <button style="font-size: 15px;" class=" mt-2" type="submit">Login</button>

                            <a href="/login" class="text-decoration-none">
                                <p style="font-size: 13px;" class="mt-4 text-dark">Existing User? Log in
                                </p>
                            </a>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>