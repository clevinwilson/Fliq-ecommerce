    <script>
        $('#account-details').submit((e) => {
            e.preventDefault();
            $.ajax({
                url: '/update-profile',
                method: 'post',
                data: $('#account-details').serialize(),
                success: ((response) => {
                    if(response){
                        swal({
                            title: "Good job!",
                            text: "You clicked the button!",
                            icon: "success",
                            button: "OK",
                        }).then(()=>{
                            location.reload();
                        })
                    }
                })
            })
        })
    </script>