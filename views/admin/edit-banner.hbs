<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{>admin-header}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">Banner</h1>

                <div class="row">

                    <div class="col-lg-11">

                        <!-- Circle Buttons -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                            </div>
                            <form action="/admin/edit-banner" method="post" class="p-5" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Banner Title</label>
                                                <input style="border-color:#b4e3eb;" value="{{bannerDetails.title}}" type="text"
                                                    class="form-control col-md-12 mt-2" id="name" name="title" required>
                                            </div>
                                            <div class="form-group mt-3 ">
                                                <label for="">Banner Sub Title</label>
                                                <input style="border-color:#b4e3eb;" value="{{bannerDetails.subtitle}}" type="text"
                                                    class="form-control col-md-12 mt-2" id="subtitle" name="subtitle"
                                                    required>
                                            </div>
                                            <input type="text" value="{{bannerDetails._id}}" name="bannerId" class="d-none">
                                            <div class="form-group mt-3 ">
                                                <label for="">Text</label>
                                                <input style="border-color:#b4e3eb;" value="{{bannerDetails.text}}" type="text"
                                                    class="form-control col-md-12 mt-2" id="text" name="text" required>
                                            </div>
                                            <div class="form-group mt-3 ">
                                                <label for="category-image">Banner Image</label>
                                                <input style="border-color:#b4e3eb;" value="" type="file"
                                                    class="form-control col-md-12 mt-2" onchange="viewImage(event)"
                                                    id="" name="image" >
                                            </div>
                                        </div>
                                        <div class="col-md-6 position-relative">
                                            <div class="form-group mt-5">
                                                <div class="mt-3 mb-3 d-flex justify-content-center align-items-center">
                                                    <img id="image" src="{{bannerDetails.imageUrl}}" class="img-fluid" />
                                                </div>
                                            </div>
                                            <div class="col-md-12 position-absolute bottom-0 mb-4">
                                                <center class="mt-4">
                                                    <a href="/admin/view-category"
                                                        class="btn btn-black  mt-3 mr-4 ">Back</a>
                                                    <button type="submit" id="submit"
                                                        class="btn btn-success  mt-3">Submit</button>

                                                </center>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function viewImage(event) {
        document.getElementById('image').style = 'display:block'
        document.getElementById('image').src = URL.createObjectURL(event.target.files[0])
    }
</script>

<style>
    #category-image {
        object-fit: cover;
        display: none;
        height: 160px;
        width: 160px;
        object-fit: cover;
    }
</style>