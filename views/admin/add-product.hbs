<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{>admin-header}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">Product </h1>

                <div class="row">

                    <div class="col-lg-12">

                        <!-- Circle Buttons -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                            </div>
                            <form action="/admin/add-product" method="post" class="p-5" enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Product Name</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="name" name="name" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Type</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="type" name="type" required>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Brand</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="brand" name="brand"
                                                    required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Model Number</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="modelnumber"
                                                    name="modelnumber" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Color</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="color" name="color"
                                                    required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Category</label>
                                                <select name="categoryId" class="form-select mt-2"
                                                    style=" border-color: #b4e3eb;" aria-label="Default select example">
                                                    <option selected>Select</option>

                                                    {{#each categoryList}}
                                                    <option name="categoryId" class="m-4" value="{{this._id}}">
                                                        {{this.name}}</option>
                                                    {{/each}}
                                                </select>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Price</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="price" name="price"
                                                    required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Quantity</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="price" name="quantity"
                                                    required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Storage</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text" class="form-control col-md-12 mt-2" id="storage"
                                                    name="storage" required>
                                            </div>
                                        </div>
                                        
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="">Specification</label>
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="specification"
                                                    name="specification" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-5" id="specification"
                                                    name="specification" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="specification"
                                                    name="specification" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <input style="border-color:#b4e3eb;" value="" type="text"
                                                    class="form-control col-md-12 mt-2" id="specification"
                                                    name="specification" required>
                                            </div>
                                        </div>
                                    </div>



                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="category-image">Image 1</label>
                                                <input style="border-color:#b4e3eb;" value="" type="file"
                                                    class="form-control col-md-12 mt-2" onchange="viewImage(event,1)"
                                                    id="" name="image1" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-5">
                                                <div class="mt-3 mb-3 d-flex justify-content-center align-items-center">
                                                    <img id="image1" src="" class="img-fluid" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="category-image">Image 2</label>
                                                <input style="border-color:#b4e3eb;" value="" type="file"
                                                    class="form-control col-md-12 mt-2" onchange="viewImage(event,2)"
                                                    id="" name="image2" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-5">
                                                <div class="mt-3 mb-3 d-flex justify-content-center align-items-center">
                                                    <img id="image2" src="" class="img-fluid" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="category-image">Image 3</label>
                                                <input style="border-color:#b4e3eb;" value="" type="file"
                                                    class="form-control col-md-12 mt-2" onchange="viewImage(event,3)"
                                                    id="" name="image3" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-5">
                                                <div class="mt-3 mb-3 d-flex justify-content-center align-items-center">
                                                    <img id="image3" src="" class="img-fluid" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mt-3 ">
                                                <label for="image1">Image 4</label>
                                                <input style="border-color:#b4e3eb;" value="" type="file"
                                                    class="form-control col-md-12 mt-2" onchange="viewImage(event,4)"
                                                    id="" name="image4" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mt-5">
                                                <div class="mt-3 mb-3 d-flex justify-content-center align-items-center">
                                                    <img id="image4" src="" class="img-fluid" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group mt-3 ">
                                                <label for="product">Overview</label>
                                                <textarea class="form-control" name="overview" rows="5"
                                                    required></textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="col-md-12 position-absolute bottom-0 mb-4">
                                                <center class="mt-4">
                                                    <a href="/admin/view-category"
                                                        class="btn btn-black  mt-3 mr-4 ">Back</a>
                                                    <button type="submit" id="submit"
                                                        class="btn btn-success  mt-3">Submit</button>

                                                </center>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function viewImage(event, imageNo) {
        document.getElementById('image' + imageNo).style = 'display:block'
        document.getElementById('image' + imageNo).src = URL.createObjectURL(event.target.files[0])
    }
</script>

<style>
    .img-fluid {
        object-fit: cover;
        display: none;
        height: 160px;
        width: 160px;
        object-fit: cover;
    }
</style>