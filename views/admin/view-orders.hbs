<!-- Custom styles for this page -->
<link href="/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<link rel="stylesheet" href="/admin/vendor/datatables/dataTables.bootstrap4.css">
<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{>admin-header}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">



            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Orders List</h1>

                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                    </div>

                    <div class="card-body">
                        {{#if categoryUpdate}}
                        <div class="alert alert-success" role="alert">
                            {{categoryUpdate}}
                        </div>
                        {{/if}}
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>User Name</th>
                                        <th>Address</th>
                                        <th>Payment Method</th>
                                        <th>Order Status</th>
                                        <th>Total Price</th>
                                        <th>Shipment Status</th>
                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>User Name</th>
                                        <th>Address</th>
                                        <th>Payment Method</th>
                                        <th>Order Status</th>
                                        <th>Total Price</th>
                                        <th>Shipment Status</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    {{#each orders}}
                                    {{#each this.orders}}
                                    <tr>
                                        <td>{{../this.fname}} {{../this.lname}} </td>
                                        <td>{{this.deliveryDetails.firstName}} {{this.deliveryDetails.lastName}},
                                            <br>{{this.deliveryDetails.street}} {{this.deliveryDetails.AddressLine2}},
                                            <br>{{this.deliveryDetails.Landmark}} {{this.deliveryDetails.state}} ,
                                            <br>{{this.deliveryDetails.postalCode}} {{this.deliveryDetails.country}}
                                        </td>
                                        <td>{{this.paymentMethod}}</td>
                                        <td>{{this.paymentstatus}}</td>
                                        <td>â‚¹ {{this.totalAmount}}</td>
                                        <td>{{this.shipmentStatus}}</td>
                                        <td class="d-flex justify-content-center align-items-center">
                                            <a href="/admin/order-details/{{this.id}}/{{../this._id}}" class="btn btn-primary">View
                                                Details</a>
                                        </td>

                                        {{!-- <td class="d-flex">
                                            <a title="Delete" class="table-btn btn btn-danger p-2"
                                                href="/admin/delete-product/{{this._id}}"><i
                                                    class="fa-solid fa-trash"></i></a>
                                            <a title="Edit" href="/admin/edit-product/{{this._id}}"
                                                class="table-btn ml-2 text-white btn btn-warning p-2"><i
                                                    class="fa-solid fa-pen"></i></a>

                                        </td> --}}
                                    </tr>
                                    {{/each}}
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Fliq 2022</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

