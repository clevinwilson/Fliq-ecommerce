<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{>admin-header}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">Edit User</h1>

                <div class="row">

                    <div class="col-lg-11">

                        <!-- Circle Buttons -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Details</h6>
                            </div>
                            <div class="mt-3 mb-3 d-flex justify-content-center align-items-center">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                                    class="rounded-circle img-fluid" style="width: 100px;" />
                            </div>
                            <form action="/admin/edit-user" method="post" class="p-5">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="form-group mt-3 col-md-6">
                                            <label for="username">First Name</label>
                                            <input style="border-color:#b4e3eb;" value="{{userDetails.fname}}"
                                                type="text" class="form-control col-md-12 mt-2" id="username"
                                                name="fname" required>
                                        </div>
                                        <div class="form-group mt-3 col-md-6">
                                            <label for="username">Last Name</label>
                                            <input style="border-color:#b4e3eb;" value="{{userDetails.lname}}"
                                                type="text" class="form-control col-md-12 mt-2" id="username"
                                                name="lname" required>
                                        </div>
                                        <input type="text" class="d-none" value="{{userDetails._id}}" name="userId">
                                        <div class="form-group mt-3 col-md-6">
                                            <label for="Emai">Email</label>
                                            <input style="border-color:#b4e3eb;" type="email"
                                                value="{{userDetails.email}}" class="form-control col-md-12 mt-2"
                                                id="email" name="email" required>
                                        </div>

                                        <div class="form-group mt-3 col-md-6">
                                            <label for="phone">Phone Number</label>
                                            <input style="border-color:#b4e3eb;" type="text"
                                                value="{{userDetails.phone}}" class="form-control col-md-12 mt-2"
                                                id="phone" name="phone" required>
                                        </div>

                                        <div class="col-md-12">
                                            <center class="mt-4">
                                                <a href="/admin/users-list" class="btn btn-black  mt-3 mr-4 ">Back</a>
                                                <button type="submit" id="submit"
                                                    class="btn btn-success  mt-3">Submit</button>

                                            </center>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>