<!-- Custom styles for this page -->
<link href="/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<link rel="stylesheet" href="/admin/vendor/datatables/dataTables.bootstrap4.css">
<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{>admin-header}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">



            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Sales report</h1>
                    <a onclick="generateSalesreport()" id="generateReport"
                        class=" text-white btn btn-sm btn-primary shadow-sm"> Generate Report</a>
                    <a style="display: none;" id="downloadReport" class=" text-white  btn btn-sm btn-success shadow-sm"
                        href="http://localhost:3000/salesreport/report.pdf" download><i
                            class="fas fa-download fa-sm text-white-50 me-2"></i>Download</a>
                </div>
                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Sales report</h6>
                    </div>

                    <div class="card-body">
                        {{#if categoryUpdate}}
                        <div class="alert alert-success" role="alert">
                            {{categoryUpdate}}
                        </div>
                        {{/if}}
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Month</th>
                                        <th>Amount</th>
                                        <th>Orders</th>
                                        <th>Products Sold</th>

                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>No</th>
                                        <th>Month</th>
                                        <th>Amount</th>
                                        <th>Orders</th>
                                        <th>Products Sold</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    {{#each salesData}}

                                    <tr>
                                        <td>{{@index}}</td>
                                        <td>{{this._id}}</td>
                                        <td>â‚¹{{this.total}}</td>
                                        <td>{{this.orderCount}}</td>
                                        <td>{{this.productQty}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Fliq 2022</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<style>
    .table-btn {
        width: 40px;
        height: 40px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
    }
</style>

<script>
    function generateSalesreport(productId) {
        $.ajax({
            url: "/admin/generate-salesreport",
            method: 'get',
            success: ((response) => {
                if (response.status) {
                    swal({
                        title: "Success",
                        text: "Your file is ready to download!",
                        icon: "success",
                        button: "OK",
                    }).then(() => {
                        document.getElementById('generateReport').style.display = "none"
                        document.getElementById('downloadReport').style.display = "block"
                    })
                }

            })
        })
    }


</script>