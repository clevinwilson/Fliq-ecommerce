<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{>admin-header}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <!-- Begin Page Content -->
            <div class="container-fluid">


                <div class="row">

                    <div class="col-lg-12">

                        <!-- Circle Buttons -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Edit Coupon</h6>
                            </div>
                            <form action="/admin/edit-coupon" method="post" class="p-5">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group mt-3 ">
                                                <label for="">Category Code</label>
                                                <input style="border-color:#b4e3eb;" value="{{details.couponCode}}" type="text"
                                                    class="form-control col-md-12 mt-2"  id="couponCode"
                                                    name="couponCode" required>
                                            </div>
                                            <div class="form-group mt-3 ">
                                                <label for="category-image">Coupon expiry date</label>
                                                <input style="border-color:#b4e3eb;" value="{{details.ExpiryDate}}" type="date"
                                                    class="form-control col-md-12 mt-2" id="couponCode"
                                                    name="ExpiryDate" required>
                                            </div>
                                            <input type="text" class="d-none" value="{{details._id}}" name="couponId">
                                            <div class="form-group mt-3 ">
                                                <label for="category-image">Coupon discount</label>
                                                <input style="border-color:#b4e3eb;" value="{{details.couponDiscount}}" type="number"
                                                    class="form-control col-md-12 mt-2" id="couponDiscount"
                                                    name="couponDiscount" required>
                                            </div>
                                            <div class="form-group mt-3 ">
                                                <label for="category-image">Minimum purchase </label>
                                                <input style="border-color:#b4e3eb;" value="{{details.minimumPurchase}}" type="number"
                                                    class="form-control col-md-12 mt-2" id="minimumPurchase"
                                                    name="minimumPurchase" required>
                                            </div>
                                            <div class="form-group mt-3 ">
                                                <label for="category-image">Maximum purchase </label>
                                                <input style="border-color:#b4e3eb;" value="{{details.maximumPurchase}}" type="number"
                                                    class="form-control col-md-12 mt-2" id="maximumPurchase"
                                                    name="maximumPurchase" required>
                                            </div>
                                            <div class="col-md-12  bottom-0 mb-4">
                                                <center class="mt-1">
                                                    <a href="/admin/dashboard"
                                                        class="btn btn-black  mt-3 mr-4 ">Back</a>
                                                    <button type="submit" id="submit"
                                                        class="btn btn-success  mt-3">Submit</button>

                                                </center>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    function viewImage(event) {
        document.getElementById('category-image').style = 'display:block'
        document.getElementById('category-image').src = URL.createObjectURL(event.target.files[0])
    }
</script>

<style>
    #category-image {
        height: 160px;
        width: 160px;
        object-fit: contain;

    }
</style>